<h1><%= t ".title" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t "activerecord.attributes.room.title" %></th>
      <th><%= t "activerecord.attributes.room.location" %></th>
      <th><%= t "activerecord.attributes.room.description" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= link_to t("links.show"), room %></td>
        <td><%= link_to t("links.edit"), edit_room_path(room) %></td>
        <td><%= link_to t("links.destroy"), room, method: :delete, data: { confirm: t("general.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

